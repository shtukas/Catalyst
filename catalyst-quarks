#!/usr/bin/ruby

# encoding: UTF-8

require_relative "Libs/loader.rb"

# ----------------------------------------------------------------------------

Quarks::firstNMarbleQuarks(Utils::screenHeight()-2)
    .map{|quark|
        announce = "(rt: #{"%5.3f" % BankExtended::recoveredDailyTimeInHours(marble.uuid()).round(3)}) #{Quarks::toString(marble)}"
        if DoNotShowUntil::isVisible(marble.uuid()) then
            puts announce[0, Utils::screenWidth()-2]
        else
            puts announce[0, Utils::screenWidth()-5].yellow
        end
    }
