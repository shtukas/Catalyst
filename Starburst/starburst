require "/Users/pascal/Galaxy/LucilleOS/Applications/Catalyst/Todo/Todo.rb"

require_relative "Starburst.rb"

# --------------------------------------------------------------------

loop {
    system('clear')
    puts "Starburst ðŸ’«"
    options = [
        "Dive Folders",
        "New Folder",
        "Collect Desktop location into folder (existing or new)"
    ]
    option = LucilleCore::selectEntityFromListOfEntitiesOrNull("starburst", options)
    break if option.nil?
    if option == "Dive Folders" then
        Starburst::diveStartburstFolders()
    end
    if option == "New Folder" then
        Starburst::interactivelyMakeNewFolderReturnFolderpath()
    end
    if option == "Collect Desktop location into folder (existing or new)" then
        starburstname = Starburst::selectExistingStarburstNameOrMakeANewOneReturnName()
        starburstfolderpath = Starburst::starburstNameToFolderpath(starburstname)
        desktopLocations = LucilleCore::locationsAtFolder("/Users/pascal/Desktop")
                            .select{|filepath| filepath[0,1] != '.' }
                            .sort
        location1 = LucilleCore::selectEntityFromListOfEntitiesOrNull("location", desktopLocations, lambda{ |location| File.basename(location) })
        next if location1.nil?
        name1 = File.basename(location1)
        name2 = "#{(Starburst::maxIndexAtStarburstName(starburstname)+1)}-#{name1}"
        location2 = "#{starburstfolderpath}/#{name2}"
        if File.file?(location1) then
            FileUtils.mv(location1, location2)
        else
            FileUtils.mkdir(location2)
            LucilleCore::copyContents(location1, location2)
        end
    end
}
