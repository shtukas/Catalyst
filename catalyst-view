# -----------------------------------------------------------------

class CatalystViewUtils
    def self.viewloop()
        objectToLineMainListing = lambda {|object, index|
            "#{"%2d" % (index+1)}     #{CommonsUtils::object2Line_v0(object)[0,CommonsUtils::screenWidth()-9]}"
        }
        objectToLineOrdinalListing = lambda {|object, ordinal, index|
            "#{"%2d" % (index+1)}     [#{("%.3f" % ordinal).rjust(16)}] #{CommonsUtils::object2Line_v0(object)[0,CommonsUtils::screenWidth()-28]}"
        }
        loop {
            screenleft = CommonsUtils::screenHeight()-3
            FlockDiskIO::loadFromEventsTimeline()
            structure = CommonsUtils::unifiedListing(screenleft)
            system("clear")
            if RequirementsOperator::getCurrentlyUnsatisfiedRequirements().size>0 then
                puts "REQUIREMENTS: OFF: #{RequirementsOperator::getCurrentlyUnsatisfiedRequirements().join(", ")}".yellow
                screenleft = screenleft - 1
            end      
            puts ""
            numberOfOrdinals = structure.select{|p| p["type"]=="ordinal" }.size 
            structure.take(screenleft).each_with_index{|p, index|
                if numberOfOrdinals>1 and index==numberOfOrdinals then
                    puts ""
                end
                if p["type"]=="ordinal" then
                    puts objectToLineOrdinalListing.call(p["object"], p["ordinal"], index).yellow
                end
                if p["type"]=="main" then
                    puts objectToLineMainListing.call(p["object"], index)
                end

            }
            sleep 10
        }
    end
end

CatalystViewUtils::viewloop()
