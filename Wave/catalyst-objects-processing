require_relative "Wave.rb"

# -----------------------------------------------------------------------------

def openItem(objectuuid)
    filepath = NSXWaveUtils::catalystUUIDToItemFilepathOrNull(objectuuid)
    exit if filepath.nil?
    text = Zeta::getOrNull(filepath, "text").strip
    puts text
    if text.lines.to_a.size == 1 and text.start_with?("http") then
        url = text
        if NSXMiscUtils::isLucille18() then
            system("open '#{url}'")
        else
            system("open -na 'Google Chrome' --args --new-window '#{url}'")
        end
        exit
    end
    if text.lines.to_a.size > 1 then
        LucilleCore::pressEnterToContinue()
        exit
    end
end

if ARGV[0] == 'open' and ARGV[1] then
    objectuuid = ARGV[1]
    openItem(objectuuid)
    exit
end

if ARGV[0] == 'open+done' and ARGV[1] then
    objectuuid = ARGV[1]
    openItem(objectuuid)
    NSXWaveUtils::performDone2(objectuuid)
    exit
end

if ARGV[0] == 'done' and ARGV[1] then
    objectuuid = ARGV[1]
    NSXWaveUtils::performDone2(objectuuid)
    exit
end

if ARGV[0] == 'recast' and ARGV[1] then
    objectuuid = ARGV[1]
    schedule = NSXWaveUtils::makeNewSchedule()
    NSXWaveUtils::writeScheduleToZetaFile(objectuuid, schedule)
    exit
end

if ARGV[0] == 'destroy' and ARGV[1] then
    objectuuid = ARGV[1]
    if LucilleCore::askQuestionAnswerAsBoolean("Do you want to destroy this item ? : ") then
        NSXWaveUtils::sendItemToBin(objectuuid)
        exit
    end
    exit
end