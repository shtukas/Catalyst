class DataExplorer

    # DataExplorer::userinterface()
    def self.userinterface()
        loop {
            system("clear")
            puts "Data Navigation And Search üó∫Ô∏è"
            operations = [
                "Starlight Navigation",
                "DataPoint Navigation",
                "latest startlight nodes",
                "latest datapoints",
                "starlight management",
            ]
            operation = LucilleCore::selectEntityFromListOfEntitiesOrNull("operation", operations)
            break if operation.nil?
            if operation == "Starlight Navigation" then
                StarlightNavigationAndBuilding::navigation()
            end
            if operation == "DataPoint Navigation" then
                DataPointsNavigationAndBuilding::navigation()
            end
            if operation == "latest startlight nodes" then
                loop {
                    puts "Latest Starlight Nodes"
                    node = LucilleCore::selectEntityFromListOfEntitiesOrNull("starlight node", StartlightNodes::nodes().last(25), lambda{|node| StartlightNodes::nodeToString(node) })
                    break if node.nil?
                    StartlightNodes::nodeDive(node)
                }
            end
            if operation == "latest datapoints" then
                loop {
                    puts "Latest DataPoints"
                    node = LucilleCore::selectEntityFromListOfEntitiesOrNull("data points", DataPoints::datapoints().last(25), lambda{|datapoint| DataPoints::datapointToString(datapoint) })
                    break if node.nil?
                    StartlightNodes::nodeDive(node)
                }
            end
            if operation == "starlight management" then
                StarlightManagement::management()
            end
        }
    end
end

DataExplorer::userinterface()

