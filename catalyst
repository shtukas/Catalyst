# -----------------------------------------------------------------

require_relative "NSXMiscLibraries/load-library.rb"
require_relative "NSXAgents/load-library.rb"

# -------------------------------------------------------------------------

CATALYST_RUN_HASH = SecureRandom.hex
CATALYST_CODE_FOLDERPATH = File.dirname(__FILE__) 
CATALYST_INBOX_DROPOFF_FOLDERPATH = "/Users/pascal/Desktop/Catalyst-Inbox"
STARTING_CODE_HASH = NSXEstateServices::locationHashRecursively(CATALYST_CODE_FOLDERPATH)

# -------------------------------------------------------------------------
# nslog

# -------------------------------------------------------------------------

if NSXMiscUtils::isLucille18() then
    NSXEstateServices::archivesTimelineGarbageCollection(true)
    NSXStreamsUtils::getItemsFromDisk()
    .each{|item|
        claim = NSXEmailTrackingClaims::getClaimByStreamItemUUIDOrNull(item["uuid"])
        next if claim.nil?
        if claim["status"] == "dead" then
            puts "Destroying email #{item["uuid"]}"
            puts JSON.pretty_generate(item)
            puts JSON.pretty_generate(claim)
            NSXStreamsUtils::destroyItem(item)
        end
        if claim["status"] == "deleted-on-server" then
            puts "Destroying email #{item["uuid"]}"
            puts JSON.pretty_generate(item)
            puts JSON.pretty_generate(claim)
            NSXStreamsUtils::destroyItem(item)
        end
    }
end

Thread.new {
    loop {
        sleep 110
        NSXCatalystObjectsOperator::screenNotificationsForOmega1Condition()
    }
}

Thread.new {
    loop {
        sleep 130
        NSXCatalystObjectsOperator::screenNotificationsForAllDoneObjects()
    }
}

# -------------------------------------------------------------------------

NSXCatalystUI::standardUILoop()
