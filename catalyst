    return if !NSXMiscUtils::isLucille18()
    loop {
        sleep 140 
        if NSXMiscUtils::trueNoMoreOftenThanNEverySeconds(nil, "17e6377e-0ee6-4e38-80cf-40f40ca9cae9", 86400) then
            NSXCatalystDevOps::archivesTimelineGarbageCollection(false)
        end
    }
}

# Email Sync

