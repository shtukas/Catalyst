#!/usr/bin/ruby

# encoding: UTF-8

require_relative "Libs/loader.rb"

# ----------------------------------------------------------------------------

Thread.new {
    loop {
        sleep 120
        if ProgrammableBooleans::trueNoMoreOftenThanEveryNSeconds("f5f52127-c140-4c59-85a2-8242b546fe1f", 3600) then
            system("#{File.dirname(__FILE__)}/../../vienna-import")
        end
    }
}

loop {

    Utils::importFromLucilleInbox()
    Calendar::dailyBriefingIfNotDoneToday()
    Anniversaries::dailyBriefingIfNotDoneToday()

    puts "-- listing ----------------------------"

    vspaceleft = Utils::screenHeight()-5

    items = UIServices::catalystNS16s()
                .select{|item| DoNotShowUntil::isVisible(item["uuid"]) }

    items.each_with_index{|item, indx|
        announce = "(#{"%3d" % indx}) #{item["announce"]}"
        next if (vspaceleft - Utils::verticalSize(announce)) < 0
        puts announce
        vspaceleft = vspaceleft - Utils::verticalSize(announce)
    }

    puts "Quarks cardinal: #{QuarksOrdinals::count()} ; Quarks Horizon: #{QuarksHorizon::getHorizonDateTimeOrNull()}".yellow

    puts "listing: .. (access top) | select <n> | start (<n>) | done (<n>) | /".yellow
    puts "top    : [] (next transformation of top todo item) | ++ # Postpone top item by an hour | + <weekday> # Postpone top item | + <float> <datecode unit> # Postpone top item".yellow


    command = LucilleCore::askQuestionAnswerAsString("> ")

    next if command == ""

    if Interpreting::match("..", command) then
        items[0]["start"].call()
    end

    if Interpreting::match("[]", command) then
        item = items[0]
        next if !item["isTodo"]
        GenericTodoFile::applyNextTransformation(item["filepath"], item["uuid"])
        next
    end

    if Interpreting::match("++", command) then
        DoNotShowUntil::setUnixtime(items[0]["uuid"], Time.new.to_i+3600)
    end

    if Interpreting::match("+ *", command) then
        _, weekdayname = Interpreting::tokenizer(command)
        unixtime = Utils::codeToUnixtimeOrNull("+#{weekdayname}")
        next if unixtime.nil?
        item = items[0]
        DoNotShowUntil::setUnixtime(item["uuid"], unixtime)
    end

    if Interpreting::match("+ * *", command) then
        _, amount, unit = Interpreting::tokenizer(command)
        unixtime = Utils::codeToUnixtimeOrNull("+#{amount}#{unit}")
        next if unixtime.nil?
        item = items[0]
        DoNotShowUntil::setUnixtime(item["uuid"], unixtime)
    end

    if Interpreting::match("select *", command) then
        _, ordinal = Interpreting::tokenizer(command)
        ordinal = ordinal.to_i
        item = items[ordinal]
        next if item.nil?
        item["start"].call()
    end

    if Interpreting::match("/", command) then
        UIServices::servicesFront()
    end

    if Interpreting::match("start", command) then
        items[0]["start"].call()
    end

    if Interpreting::match("start *", command) then
        _, ordinal = Interpreting::tokenizer(command)
        ordinal = ordinal.to_i
        item = items[ordinal]
        next if item.nil?
        item["start"].call()
    end

    if Interpreting::match("done", command) then
        items[0]["done"].call()
    end

    if Interpreting::match("done *", command) then
        _, ordinal = Interpreting::tokenizer(command)
        ordinal = ordinal.to_i
        item = items[ordinal]
        next if item.nil?
        item["done"].call()
    end
}

