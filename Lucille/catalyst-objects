require_relative "Lucille.rb"

# -------------------------------------------------------------------------

LucilleCore::garbageCollection()
LucilleCore::ensureStandardFilenames()

# -------------------------------------------------------------------------

class MetricHelper
    def initialize()
        @counter = 0
    end
    def metric(base)
        @counter = @counter + 1
        base - @counter.to_f/10000
    end
end

def makeContentItem(location, timeline)
    # We have the two special timelines [Inbox] and [Open Cycles],
    # The rest are just chars without decoration
    # We also have [Infinity]
    timelinefragment = timeline[0, 1] == "[" ? timeline : "(#{timeline})"
    if location[-4, 4] == ".txt" then
        return {
            "type" => "line-and-body",
            "line" => "[lucille] #{LucilleCore::getBestDescription(location)} #{timelinefragment}",
            "body" => "[lucille] #{IO.read(location).strip}\n#{timelinefragment}"
        }
    end
    {
        "type" => "line",
        "line" => "[lucille] #{LucilleCore::getBestDescription(location)} #{timelinefragment}"
    }
end

def makeMetric(metricHelper, isRunning, timeline)
    if isRunning then
        return 1
    end
    if timeline == "[Inbox]" then
        return metricHelper.metric(0.76) # Lucille 'Inbox'
    end
    metricHelper.metric(0.4) # Lucille (timelines)
end

def makeCommands(timeline)
    if timeline == "[Inbox]" then
        return ["inbox"]
    end
    ["start", "open", "set-description", "[]", "stop", "recast", "ifcs", "move-to-nyx", "done"]
end

def shouldOpenAndDone(location)
    str1 = "vienna-url.txt"
    return true if location[-str1.size, str1.size] == str1
    return true if ( location[-4, 4] == ".txt" and IO.read(location).strip.lines.to_a.size==1 and IO.read(location).strip.start_with?("http") )
    false
end

def makeDefaultCommand(location, isRunning, timeline)
    if timeline == "[Inbox]" then
        return "inbox"
    end
    if !isRunning and shouldOpenAndDone(location) then
        return "open+done"
    end
    if !isRunning then
        return "start+open"
    end
    "stop"
end

# -------------------------------------------------------------------------

metricHelper = MetricHelper.new()
cluster = LXCluster::getClusterFromDisk()
displayLocations = (LucilleCore::getTimelineLocations("[Inbox]") + cluster["computed"]["locationsForDisplay"]).uniq

objects = displayLocations
            .select{|location| DoNotShowUntil::isVisible(location) }
            .map{|location|
                timeline = LucilleCore::getLocationTimeline(location)
                uuid = Digest::SHA1.hexdigest(location)
                isRunning = LXRunManagement::locationIsRunning(location)
                {
                    "uuid"            => uuid,
                    "contentItem"     => makeContentItem(location, timeline),
                    "metric"          => makeMetric(metricHelper, isRunning, timeline),
                    "commands"        => makeCommands(timeline),
                    "isRunning"       => isRunning,
                    "defaultCommand"  => makeDefaultCommand(location, isRunning, timeline),
                    "shell-redirects" => {
                        "inbox"  => "/Users/pascal/Galaxy/LucilleOS/Applications/Catalyst/Lucille/catalyst-objects-processing inbox-catalyst-command '#{location}'",
                        "start"  => "/Users/pascal/Galaxy/LucilleOS/Applications/Catalyst/Lucille/catalyst-objects-processing start '#{location}'",
                        "stop"   => "/Users/pascal/Galaxy/LucilleOS/Applications/Catalyst/Lucille/catalyst-objects-processing stop '#{location}'",
                        "open"   => "/Users/pascal/Galaxy/LucilleOS/Applications/Catalyst/Lucille/catalyst-objects-processing open '#{location}'",
                        "set-description" => "/Users/pascal/Galaxy/LucilleOS/Applications/Catalyst/Lucille/catalyst-objects-processing set-description '#{location}'",
                        "[]"     => "/Users/pascal/Galaxy/LucilleOS/Applications/Catalyst/Lucille/catalyst-objects-processing apply-next-to-text '#{location}'",
                        "recast" => "/Users/pascal/Galaxy/LucilleOS/Applications/Catalyst/Lucille/catalyst-objects-processing recast '#{location}'",
                        "ifcs"   => "/Users/pascal/Galaxy/LucilleOS/Applications/Catalyst/Lucille/catalyst-objects-processing ifcs '#{location}'",
                        "move-to-nyx" => "/Users/pascal/Galaxy/LucilleOS/Applications/Catalyst/Lucille/catalyst-objects-processing move-to-nyx '#{location}'",
                        "done"   => "/Users/pascal/Galaxy/LucilleOS/Applications/Catalyst/Lucille/catalyst-objects-processing done '#{location}'"
                    },
                    "location"        => location
                }
            }

puts JSON.generate(objects)
